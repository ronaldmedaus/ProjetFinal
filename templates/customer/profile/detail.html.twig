{% extends "base.html.twig" %}

{% block body %}
<div class="container py-5">

    <div class="row">
     {% include "_messages_flash.html.twig" %}
        <div class="col-sm-12 col-md-6">
            <a href="{{ path('profile_image_edit') }}">
            <div class="card">
    
                <img 
                {% if  (app.user.image is same as null) or (app.user.image is same as "") %}
                    src="https://assets.laboutiqueofficielle.com/w_1100,q_auto,f_auto/media/products/2021/04/23/luxury-lovers_263990_LL_TS_RELEASEDVERT_BLC_20210604T144728_05.jpg"         
                {% else %}
                src="{{ app.user.image }}"      
            {% endif %}
                
                class="card-img-top imageCard" alt="image_category">
            </div>
            </a>
            <div class="card mt-3">
                <div class="card-header">
                    <h5><span style="color: #5e9693;">Infos persos</span><span style="color: #d1c2b8;"></span></h5>
                </div>
                <div class="card-body">
                    <p>{{ app.user.name }}</p>
                    <p>{{ app.user.lastname }}</p>
                    <p>{{ app.user.telephone }}</p>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Configuration</h5>
                </div>
                <div class="card-body">
                    <a href="{{ path('profile_purchase_list')  }}" class="btn btn-info w-100 mt-2">Mes commandes</a>
                    <a href="{{ path('profile_image_edit') }}" class="btn btn-info w-100 mt-2">Modifier ma photo de profil</a>
                    <a href="{{ path('profile_edit_info') }}" class="btn btn-info w-100 mt-2">Modifier mes infos persos</a>
                    <a href="{{ path('profile_edit_password') }}" class="btn btn-info w-100 mt-2">Changer mon mot de passe</a>
                    <a href="{{ path('profile_contact_support') }}" class="btn btn-info w-100 mt-2">Contacter le support</a>
                </div>
            </div>
        </div>
    </div>

</div>

{% endblock %}
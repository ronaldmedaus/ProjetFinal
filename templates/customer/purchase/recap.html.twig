{% extends "base.html.twig" %}

{% block body %}

    <section>
        <div class="container py-5">
            <div class="row">
                <div class="col-12 mb-3">
                    <h3 class="text-center"><span style="color: #5e9693;">Valider votre commande</span><span style="color: #777;"></span></h3>
                </div>
                {% include "_messages_flash.html.twig" %}
                <div class="col-sm-12 col-md-6">
                <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">Récapitulatif des produits</h5>
                            </div>
                            <div class="card-body">
                                <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Produit</th>
                                <th scope="col">Prix Unitaire</th>
                                <th scope="col">Quantité</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in detailProducts %}
                                <tr>
                                    <th>
                                        <div class="d-flex align-items-center">
                                            <img src="{{ item.product.image}}" alt="" style="height:80px;object-fit:contain;">
                                            <div class="d-flex flex-column align-items-center">
                                                <p>{{ item.product.name }}</p>
                                            </div>
                                        </div>
                                    </th>
                                    <td>{{ item.product.price | priceEuro }}</td>
                                    <td>
                                        <button class="btn btn-light"> {{ item.qty }}</button>
                                    </td>
                                    <td>{{ item.total | priceEuro }}</td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <th colspan="2">
                                </th>
                                <th>
                                    <p><strong>Sous total</strong></p>
                                </th>
                                <th>
                                    <p><strong>{{ totalPrixPanier | priceEuro}}</strong></p>
                                </th>
                            </tr>
                            
                        
                        </tbody>
                    </table>
                            </div>
                        </div>
                    
                </div>
                <div class="col-sm-12 col-md-6">
                
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">Ajouter votre adresse de livraison</h5>
                            </div>
                            <div class="card-body">
                                {{ form_start(form) }}
                                {{ form_widget(form) }}
                                <button class="btn btn-success mt-3 w-100" type="submit">Finaliser ma commande</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    
                </div>
            </div>
        </div>
    </section>

{% endblock %}
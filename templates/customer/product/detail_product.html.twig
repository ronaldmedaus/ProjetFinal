{% extends "base.html.twig" %}

{% block body %}

  <section>
      <div class="container py-5">
        <div class="row">
              {% include "_messages_flash.html.twig" %}

            <div class="col-sm-12 col-md-6">

                <div class="card">
                    <img src="{{ product.image }}" class="card-img-top imageDetailProduct" alt="image_category">
                </div>
            
            </div>
            <div class="col-sm-12 col-md-6">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p>{{ product.price | priceEuro }}</p>
                        <a href="{{ path('cart_add',{ 'id' : product.id } ) }}" class="btn btn-secondary opacity-50 w-100 mask-custom shadow-0"  style="color: #5e9693;">Ajouter au panier</a>
                    </div>
                </div>
            
            </div>

        </div>
    </div>

  </section>

   <section>
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center">D'autres produits</h3>
            </div>  

            {% for product in suggestedProducts %}

                <div class="col-sm-12 col-md-6 col-lg-3 mt-3">

                    <div class="card">
                        <img src="{{ product.image }}" class="card-img-top imageCard" alt="image_category">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p>{{ product.price | priceEuro }}</p>
                            <a href="{{ path('boutique_product_detail',{'id': product.id} ) }}" class="btn btn-primary w-100">Consulter</a>
                        </div>
                    </div>
            
                </div>
                
            {% endfor %}

        </div>
    </div>
  </section>

{% endblock %}